<style>
    .focused-filter-container {
        border-top: 1px solid;
        border-width:4px !important;
        border-color:red !important;
    }
    .filter-container {
        border:solid;
        border-width:1px;
        border-radius:0.5em;
    }
    .filter-list-action-btn {
        font-size: 1.5em;
        margin-left: 2px;
        cursor: pointer;
    }
</style>
<div class="panel">
    <div class="panel-heading">
        Added Variable Filters
    </div>
    <div id="filter-list" class="panel-body" tabindex=0 aria-activedescendent="">
    {{#each activeFilters}}
        {{#if datatable}}
            <div class="filter-container" id="{{this.searchResult.result.metadata.columnmeta_var_group_id}}">
                <div class="filter-header">
                    <div>
                        <span>Filter: </span> {{#if this.searchResult.result.metadata.columnmeta_name}}<span class="var-name">{{this.searchResult.result.metadata.columnmeta_name}}</span>{{/if}}
                    </div>
                    <div class="filter-buttons-container">
                        <i class="fa fa-info-circle info-filter filter-list-action-btn" title="Variable information" data-index="{{@index}}"></i>
                        <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
                        <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
                    </div>
                </div>
                <div class="filter">
                    <div class="study"><span>Study: </span>{{this.searchResult.result.metadata.columnmeta_study_id}}</div>
                    {{#if this.searchResult.result.metadata.columnmeta_var_group_id}}
                        <div><span>Dataset ID:</span> {{this.searchResult.result.metadata.columnmeta_var_group_id}}</div>
                    {{/if}}
                    {{#if this.searchResult.result.metadata.columnmeta_var_group_description}}
                        <div><span>Dataset Name:</span> {{this.searchResult.result.metadata.columnmeta_var_group_description}}</div>
                    {{/if}}
                </div>
                <div class="value">{{variables.length}} variables selected. Participants with any value recorded for any of these variables will be included if they match all other defined filters</div>
            </div>
        {{else if genomic}}
            <div class="filter-container with-wrap" id="genomic">
                <div class="filter-header">
                    <div>
                        <div>Genomic Filter</div>
                    </div>
                    <div class="filter-buttons-container">
                        <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
                        <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
                    </div>
                </div>
                {{> genomic-filter-partial filters=variantInfoFilters}}
            </div>
        {{else}}
            <div class="filter-container" id="{{this.searchResult.result.metadata.columnmeta_var_id}}">
                    <div class="filter-header">
                        <div>
                            <span>Filter: </span> {{#if this.searchResult.result.metadata.columnmeta_name}}<span class="var-name">{{this.searchResult.result.metadata.columnmeta_name}}</span>{{/if}}
                        </div>
                        <div>
                            <i class="fa fa-info-circle info-filter filter-list-action-btn" title="Variable information" data-index="{{@index}}"></i>
                            <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
                            <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
                        </div>
                    </div>
                <div class="filter">
                    <div><span>Variable Accession: </span>{{this.searchResult.result.metadata.columnmeta_var_id}}</div>
                    <div><span>Variable Name: </span>{{this.searchResult.result.metadata.columnmeta_name}}</div>
                    <div class="value"><span>Value: </span>{{getFilterTypeDescription this}}</div>
                    <div class="study"><span>Study: </span>{{this.searchResult.result.metadata.columnmeta_study_id}}</div>
                    {{#if this.searchResult.result.metadata.columnmeta_var_group_description}}
                        <div class="dataset">
                            <span>Dataset Name: </span>{{this.searchResult.result.metadata.columnmeta_var_group_description}}
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/if}}
    {{/each}}
    </div>
</div>
