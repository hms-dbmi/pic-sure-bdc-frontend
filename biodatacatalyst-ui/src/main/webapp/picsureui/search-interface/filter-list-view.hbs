<style>
    .focused-filter-container {
        border-top: 1px solid;
        border-width:4px !important;
        border-color:red !important;
    }
    .filter-container {
        border:solid;
        border-width:1px;
        margin:.5em;
        border-radius:.5em;
    }
    .filter-list-action-btn {
        font-size: 1.5em;
        cursor: pointer;
    }
    .with-wrap {
        overflow-wrap: break-word;
    }
</style>
<div id="filter-list" tabindex=0 aria-activedescendent="">
{{#each activeFilters}}
    {{#if datatable}}
        <div class="filter-container" id="{{this.searchResult.result.metadata.dataTableId}}">
            <div class="filter-header">
                <div>    
                    <i class="fa fa-info-circle info-filter filter-list-action-btn" title="Variable information" data-index="{{@index}}"></i>
                    {{#if this.searchResult.result.metadata.var_name}}
                    {{/if}}
                </div>
                <div>
                    <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
                    <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
                </div>
            </div>
            <div class="filter">
                <p class="var-name">Filter: {{this.searchResult.result.metadata.var_name}}</p>
                <p class="study">Study: {{this.searchResult.result.metadata.study_id}}</p>
                {{#if this.searchResult.result.metadata.dataTableId}}
                    <p>Datatable ID: {{this.searchResult.result.metadata.dataTableId}}</p>
                {{/if}}
                {{#if this.searchResult.result.metadata.dataTableName}}
                    <p>Datatable Name: {{this.searchResult.result.metadata.dataTableName}}</p>
                {{/if}}
                {{#if topmed }}
                    {{#if this.searchResult.result.metadata.dataTableName}}
                        <p class="table">Table Name: {{this.searchResult.result.metadata.dataTableName}}</p>
                    {{/if}}
                {{/if}}
            </div>
            <p class="value">{{variables.length}} variables selected. Participants with any value recorded for any of these variables will be included if they match all other defined filters</p>
        </div>
    {{else if genomic}}
         <div class="filter-container with-wrap" id="genomic">
            <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
            <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
            {{> genomic-filter-partial filters=variantInfoFilters}}
         </div>
    {{else}}
        <div class="filter-container" id="{{this.searchResult.result.metadata.varId}}">
                <div class="filter-header">
                {{#if this.searchResult.result.metadata.var_name}}
                    <div>
                        <i class="fa fa-info-circle info-filter filter-list-action-btn" title="Variable information" data-index="{{@index}}"></i>
                    </div>
                    <div>
                        <i class="fa fa-times-circle remove-filter filter-list-action-btn" title="Remove Filter" data-index="{{@index}}"></i>
                        <i class="fa fa-pencil-square-o edit-filter filter-list-action-btn" title="Edit Filter" data-index="{{@index}}"></i>
                    </div>
                {{/if}}
                </div>
            <div class="filter">
                <p class="var-name">Filter: {{this.searchResult.result.metadata.var_name}}</p>
                <p>{{this.searchResult.result.metadata.varId}}</p>
                <p>{{this.searchResult.result.metadata.description}}</p>
                <p class="value">Value: {{getFilterTypeDescription this}}</p>
                <p class="study">Study: {{this.searchResult.result.metadata.study_id}}</p>
                {{#if topmed }}
                    {{#if this.searchResult.result.metadata.dataTableName}}
                        <p class="table">Table Name: {{this.searchResult.result.metadata.dataTableName}}</p>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    {{/if}}
{{/each}}
</div>