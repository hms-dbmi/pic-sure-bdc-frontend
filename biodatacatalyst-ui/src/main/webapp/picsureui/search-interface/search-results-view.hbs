<style>
	.search-result {
        border-right: 1px solid;
        border-bottom: 1px solid;
        border-left: 1px solid;
        padding:3px;
		overflow:hidden;
	}
  .search-result:first-of-type {
        border-top: 1px solid;
    }
	.search-result-icons {
		float:right;
	}
	.search-result span.col {
		padding:3px;
	}
	.search-result:nth-child(even) {
		background:lightgray;
	}
	.search-result:nth-child(odd) {
		background:white;
	}
	.dt-short-description {
		overflow:hidden;
	}
	.search-result-action-btn {
		font-size:1.5em;
		padding-left:.25em;
	}
	a.disabled{
    pointer-events: none;
    color: black;
    background: white;
    border: solid;
    border-radius: .25em;
    border-width: 1px;
    min-width: 1em;
    text-align: center;
    display: inline-block;
	}
</style>

<span class='row'>{{variableCount}} variables match your search</span>
{{#each results}}
  <div class='search-result row' data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}">
  	<span class='col' data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}">{{this.abbreviation}}<br>{{this.study_id}} </span>
  	<span class='col' data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}">[{{this.name}}] {{this.description}} </span>
  	<span class='search-result-icons col'>
  		<i data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}" class="fa fa-filter search-result-action-btn"></i>
  		<i class="fa fa-database search-result-action-btn"></i>
  	</span>
  </div>
{{/each}}
<div class='search-result-pages row'>
	{{#each pages}}
		<span class='page-link'><a {{#if isActive}}class="disabled"{{/if}} id='page-{{pageNumber}}'>{{pageNumber}}</a></span>
	{{/each}}
</div>
