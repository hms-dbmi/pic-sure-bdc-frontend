<style>
	.search-result {
		border: solid;
		border-radius: 1em;
		padding:3px;
	}
	.search-result-icons {
		float:right;
	}
	.search-result span.col {
		padding:3px;
	}
	.search-result:nth-child(even) {
		background:lightgray;
	}
	.search-result:nth-child(odd) {
		background:white;
	}
</style>

<span class='row'>{{variableCount}} variables match your search</span>
{{#each results}}
  <div class='search-result row'>
  	<span class='col'>{{this.abbreviation}}<br>{{this.study_id}} </span>
  	<span class='col'> {{this.description}} </span>
  	<span class='search-result-icons col'>
  		<i data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}" class="fa fa-info-circle" title="Variable Information"></i>
  		<i data-data-table-id="{{this.table_id}}" data-variable-id="{{this.variable_id}}" data-result-index="{{this.result_index}}" class="fa fa-filter"></i>
  		<i class="fa fa-database"></i>
  	</span>
  </div>
{{/each}}