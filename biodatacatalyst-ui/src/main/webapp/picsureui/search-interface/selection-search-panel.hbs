<div>
    <h3 class="selection-heading">{{heading}}</h3>
    <div class="selection-container space-even" aria-label="{{description}}">
        <div class="panel panel-default no-padding half-width">
            <div class="panel-heading space-out panel-extra-large">
                <h4 class="panel-title">{{searchContext}}</h4>
                <i class="fa fa-info-circle fa-lg" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="{{description}}"></i>
            </div>
            <input type="search" id="{{searchId}}" class="selection-search-box form-control" placeholder="{{placeholderText}}" />
            <div class="panel-body select-box" tabindex="{{tabindex @index}}">
                <div class="genomic-value-container selection-search-results">
                    {{#each placeholder}}
                    <input class="categorical-filter-input" type="checkbox" tabindex="-1" value="{{this}}"/>{{this}} <br />
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="panel panel-default no-padding half-width">
            <div class="panel-heading results-header">
                <h4 class="panel-title">{{resultContext}}</h4>
                <button id="{{searchId}}-selection-clear-button" class="btn btn-default">Clear</button>
            </div>
            <div class="panel-body select-box results-box">
                <div class="genomic-value-container selections">
                    {{#each selectedResults}}
                    <input class="categorical-filter-input" type="checkbox" tabindex="-1" value="{{this}}"/>{{this}} <br />
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>